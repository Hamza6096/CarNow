{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <h1>Car</h1>

    <div class="{{ car.data }}" style="width: 18rem;">
        <img src="{{ car.data }}" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{ car.brand }} <span>{{ car.model }}</span></h5>
            <p class="card-text">{{ car.description }}</p>
        </div>
        <ul class="list-group list-group-flush">
            <a class="btn btn-outline-success" href="{{ path('renting_new', {'idCar': car.id, 'idUser': app.user.id}) }}">Louer</a>
            <li class="list-group-item">Prix journalier: {{ car.dailyPrice }}€</li>
            <li class="list-group-item">
                Année: {{ car.matriculationDate ? car.matriculationDate|date('Y-m-d H:i:s') : '' }}</li>
            <li class="list-group-item">Nombre de portes: {{ car.nbSeats }}</li>
            <li class="list-group-item">Nombre de places: {{ car.nbDoors }}</li>
            <li class="list-group-item">Categorie: {{ car.category }}</li>
            <li class="list-group-item">Carburant: {{ car.energy }}</li>
        </ul>
        <div class="card-body">
            <a class="btn btn-outline-success" href="{{ path('car_index') }}">back to list</a>

            <a class="btn btn-outline-success" href="{{ path('car_edit', {'id': car.id}) }}">edit</a>

            <a class="btn btn-outline-danger" class="btn btn-danger">{{ include('car/_delete_form.html.twig') }}</a>

        </div>
    </div>


