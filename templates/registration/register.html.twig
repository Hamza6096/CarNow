{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <h1>S'inscrire</h1>

    {{ form_start(registrationForm) }}
    <fieldset>
        <legend>Mon identité</legend>

        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.name) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.dateofbirth) }}
    </fieldset>
    <fieldset>
        <legend>Mon identité</legend>
        {{ form_row(registrationForm.phonenumber) }}
        {{ form_row(registrationForm.country) }}
        {{ form_row(registrationForm.zipcode) }}
        {{ form_row(registrationForm.city) }}
        {{ form_row(registrationForm.address) }}
        {{ form_row(registrationForm.RgpdConsent) }}
    </fieldset>


        <button type="submit" class="btn btn-primary">M'enregistrer</button>
    {{ form_end(registrationForm) }}
{% endblock %}
