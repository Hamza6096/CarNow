{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div class= "text-center d-flex mx-auto">
    <main class="form-signin m-auto">
        <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Me déconnecter</a>
                    </div>
                {% endif %}
                <div class="m-3">
                    <div class="d-flex align-items-center">
                        <p class="text-center-3">Pas encore de compte ? </p> <a href="/register" class="btn btn-outline-dark mb-3 mx-3">s'inscrire</a>
                    </div>
                </div>
{#            <img class="mb-4" src="../assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">#}
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            <div class="form-floating">
                <input type="email" value="{{ last_username }}" name="email" class="form-control" id="inputEmail" placeholder="name@example.com" required autofocus>
                <label for="inputEmail">Email address</label>
            </div>
            <div class="form-floating">
                <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Password" autocomplete="current-password" required>
                <label for="inputPassword"  >Password</label>
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
            <p><a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a></p>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
        </form>

    </main>
</div>


    {#
    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
    See https://symfony.com/doc/current/security/remember_me.html

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> Remember me
        </label>
    </div>
    #}
{% endblock %}
